.thought
	= form_for @thought do |f|
		= f.text_field :title, placeholder: "Title", size: "50x2"
		%br
		%br
		= f.text_area :text, placeholder: "Text", size: "50x7"
		%br
		%br
		= f.text_field :source, placeholder: "Source", size: "83x2"
		%br
		%br
		= f.submit "Update"
		%br
		%br
	.action
		= link_to "Go Back", thoughts_path